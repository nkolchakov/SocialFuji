<h1 id='main-title'>Instagram</h1>
<hr>
<div class="well bs-component">
    <form class="form-horizontal">
        <fieldset>
           	    <div class="form-group">
           	        <label class="search-label col-md-10">Search by #tagname or username: </label>
                        <div class="row">
                            <div class="col-md-6">
           	                    <input type="text" id='input-tagname-input' class="form-control" placeholder="What do you want to see on Instagram?">
                            </div>
                            <div class="col-md-2">
           	                    <button class="btn btn-success" id='search-tagname-btn'>Go!</button id="">      
                            </div>  
                        </div>            
           	    </div>
        </fieldset>
    </form>
</div>
<hr>

{{#data}}
<div class="panel panel-default">
    <div class="panel-heading">
        <p><a onclick = 'scroll(0,0)'href='#/instagram/user={{user.full_name}}'>{{user.full_name}}</a>: {{caption.text}}</p>
    </div>
    <div class="panel-body">
        <div class="container-fluid">
            <img class="img-rounded img-responsive" src="{{images.standard_resolution.url}}"></img>
            <p>
                <strong>{{likes.count}}</strong> &#128077; 
                <button class='show-comments-btn btn btn-info' id='{{id}}' style="float: right">Show Comments</button>
                <div class='comments-container'></div>
            </p>
            <div id='comment-{{id}}'></div>
        </div>
        
    </div>
    <footer>
    {{#tags}}
        <a href="#/instagram/tag={{this}}">#{{this}}</a>
    {{/tags}}
    </footer>
</div>
{{/data}}
